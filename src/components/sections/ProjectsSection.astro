---
import projectsData from '../../data/projects.json';
---

<section id="projects" class="py-20 relative z-10">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Featured <span class="gradient-text">Projects</span>
      </h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto">
        A showcase of my recent work and technical expertise
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projectsData.projects.map((project, index) => (
        <div class="glass-effect rounded-xl overflow-hidden group hover:transform hover:scale-105 transition-all duration-300">
          <!-- Project Image Placeholder -->
          <div class="h-48 bg-gradient-to-br from-purple-600/20 to-blue-600/20 relative overflow-hidden">
            <div class="absolute inset-0 flex items-center justify-center">
              <svg class="w-16 h-16 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            {project.status === 'in-progress' && (
              <div class="absolute top-4 right-4">
                <span class="px-2 py-1 bg-yellow-500/20 text-yellow-300 rounded-full text-xs border border-yellow-500/30">
                  In Progress
                </span>
              </div>
            )}
            {project.status === 'completed' && (
              <div class="absolute top-4 right-4">
                <span class="px-2 py-1 bg-green-500/20 text-green-300 rounded-full text-xs border border-green-500/30">
                  Completed
                </span>
              </div>
            )}
          </div>
          
          <div class="p-6">
            <div class="flex justify-between items-start mb-3">
              <h3 class="text-xl font-semibold text-white group-hover:text-purple-300 transition-colors duration-300">
                {project.title}
              </h3>
              <span class="text-sm text-gray-400">{project.date}</span>
            </div>
            
            <p class="text-gray-300 text-sm mb-4 leading-relaxed">
              {project.description}
            </p>
            
            <!-- Technologies -->
            <div class="flex flex-wrap gap-2 mb-4">
              {project.technologies.slice(0, 3).map((tech) => (
                <span class="px-2 py-1 bg-purple-600/20 text-purple-300 rounded text-xs border border-purple-500/30">
                  {tech}
                </span>
              ))}
              {project.technologies.length > 3 && (
                <span class="px-2 py-1 bg-gray-600/20 text-gray-400 rounded text-xs">
                  +{project.technologies.length - 3} more
                </span>
              )}
            </div>
            
            <!-- Features -->
            <div class="mb-6">
              <h4 class="text-sm font-medium text-gray-400 mb-2">Key Features:</h4>
              <ul class="space-y-1">
                {project.features.slice(0, 2).map((feature) => (
                  <li class="flex items-center space-x-2 text-sm text-gray-300">
                    <svg class="w-3 h-3 text-purple-400" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
            
            <!-- Links -->
            <div class="flex space-x-3">
              {project.liveUrl && (
                <a href={project.liveUrl} 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="flex items-center space-x-1 px-3 py-2 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded text-sm hover:from-purple-700 hover:to-blue-700 transition-all duration-300">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                  <span>Live Demo</span>
                </a>
              )}
              
              {project.githubUrl && (
                <a href={project.githubUrl} 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="flex items-center space-x-1 px-3 py-2 glass-effect text-gray-300 rounded text-sm hover:bg-white hover:bg-opacity-10 transition-all duration-300">
                  <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  <span>Code</span>
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

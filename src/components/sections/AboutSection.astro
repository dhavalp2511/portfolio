---
import aboutData from '../../data/about.json';
---

<section id="about" class="py-20 relative z-10">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        About <span class="gradient-text">Me</span>
      </h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto">
        {aboutData.yearsOfExperience} years of experience building innovative digital solutions
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-12 items-start">
      <!-- About Text -->
      <div class="space-y-6">
        <p class="text-gray-300 text-lg leading-relaxed">
          {aboutData.description}
        </p>
        
        <div class="space-y-4">
          <h3 class="text-2xl font-semibold text-white mb-4">Key Achievements</h3>
          <ul class="space-y-3">
            {aboutData.achievements.map((achievement) => (
              <li class="flex items-start space-x-3">
                <svg class="w-5 h-5 text-purple-400 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-300">{achievement}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
      
      <!-- Skills Grid -->
      <div class="space-y-8">
        {Object.entries(aboutData.skills).map(([category, skills]) => (
          <div class="glass-effect p-6 rounded-xl">
            <h3 class="text-xl font-semibold text-white mb-4 capitalize">
              {category.replace('_', ' ')}
            </h3>
            <div class="flex flex-wrap gap-2">
              {skills.map((skill) => (
                <span class="px-3 py-1 bg-gradient-to-r from-purple-600/20 to-blue-600/20 text-purple-300 rounded-full text-sm border border-purple-500/30 hover:border-purple-400/50 transition-colors duration-300">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

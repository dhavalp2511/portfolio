---
import educationData from '../../data/education.json';
---

<section id="education" class="py-20 relative z-10">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        <span class="gradient-text">Education</span>
      </h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto">
        My academic background and achievements
      </p>
    </div>
    
    <div class="max-w-4xl mx-auto">
      <!-- Education -->
      <div>
        <h3 class="text-2xl font-semibold text-white mb-8 text-center">
          Academic Background
        </h3>
        
        <div class="space-y-6">
          {educationData.education.map((edu) => (
          <div class="glass-effect rounded-xl p-6 hover:transform hover:scale-105 transition-all duration-300">
            <div class="flex flex-col md:flex-row md:items-start justify-between mb-4">
              <div class="flex-1">
                <h4 class="text-xl font-semibold text-white mb-2">
                  {edu.degree}
                </h4>
                <p class="text-purple-400 font-medium mb-1">{edu.institution}</p>
                <p class="text-gray-400 text-sm">{edu.location}</p>
              </div>
              <div class="text-right mt-2 md:mt-0">
                <p class="text-gray-400 text-sm">{edu.duration}</p>
                {edu.gpa && (
                  <p class="text-green-400 text-sm font-medium">GPA: {edu.gpa}</p>
                )}
              </div>
            </div>
            
            <p class="text-gray-300 mb-4 leading-relaxed">
              {edu.description}
            </p>
            
            <!-- Relevant Courses -->
            <div class="mb-4">
              <h5 class="text-sm font-medium text-gray-400 mb-2">Relevant Courses:</h5>
              <div class="flex flex-wrap gap-2">
                {edu.relevantCourses.map((course) => (
                  <span class="px-2 py-1 bg-blue-600/20 text-blue-300 rounded text-xs border border-blue-500/30">
                    {course}
                  </span>
                ))}
              </div>
            </div>
            
            <!-- Achievements -->
            <div>
              <h5 class="text-sm font-medium text-gray-400 mb-2">Achievements:</h5>
              <ul class="space-y-2">
                {edu.achievements.map((achievement) => (
                  <li class="flex items-start space-x-2">
                    <svg class="w-4 h-4 text-purple-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-gray-300 text-sm">{achievement}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

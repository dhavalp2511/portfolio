---
import personalData from '../../data/personal.json';

const currentYear = new Date().getFullYear();
---

<footer id="contact" class="py-20 relative z-10 border-t border-gray-800">
  <div class="max-w-7xl mx-auto px-6">
    <!-- Contact Section -->
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Get In <span class="gradient-text">Touch</span>
      </h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto mb-8">
        Let's collaborate on your next project or discuss exciting opportunities
      </p>
      
      <div class="flex flex-col md:flex-row gap-6 justify-center items-center">
        <a href={`mailto:${personalData.email}`} 
           class="flex items-center space-x-3 px-6 py-3 bg-gradient-to-r from-purple-600 to-blue-600 text-white rounded-lg font-medium hover:from-purple-700 hover:to-blue-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          <span>Send Email</span>
        </a>
        
        <a href={`tel:${personalData.phone}`} 
           class="flex items-center space-x-3 px-6 py-3 glass-effect text-white rounded-lg font-medium hover:bg-white hover:bg-opacity-10 transition-all duration-300 transform hover:scale-105">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          <span>Call Me</span>
        </a>
      </div>
    </div>
    
    <!-- Social Links & Info -->
    <div class="grid md:grid-cols-3 gap-8 mb-12">
      <!-- Personal Info -->
      <div class="text-center md:text-left">
        <h3 class="text-xl font-semibold text-white mb-4">Contact Info</h3>
        <div class="space-y-2 text-gray-300">
          <p class="flex items-center justify-center md:justify-start space-x-2">
            <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span>{personalData.email}</span>
          </p>
          <p class="flex items-center justify-center md:justify-start space-x-2">
            <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span>{personalData.phone}</span>
          </p>
          <p class="flex items-center justify-center md:justify-start space-x-2">
            <svg class="w-4 h-4 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>{personalData.location}</span>
          </p>
        </div>
      </div>
      
      <!-- Social Media -->
      <div class="text-center">
        <h3 class="text-xl font-semibold text-white mb-4">Follow Me</h3>
        <div class="flex justify-center space-x-4">
          {personalData.social.github && (
            <a href={personalData.social.github} 
               target="_blank" 
               rel="noopener noreferrer"
               class="p-3 glass-effect rounded-lg hover:bg-white hover:bg-opacity-10 transition-all duration-300 transform hover:scale-110 group">
              <svg class="w-6 h-6 text-gray-400 group-hover:text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
          )}
          
          {personalData.social.linkedin && (
            <a href={personalData.social.linkedin} 
               target="_blank" 
               rel="noopener noreferrer"
               class="p-3 glass-effect rounded-lg hover:bg-white hover:bg-opacity-10 transition-all duration-300 transform hover:scale-110 group">
              <svg class="w-6 h-6 text-gray-400 group-hover:text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          )}
          
          {personalData.social.twitter && (
            <a href={personalData.social.twitter} 
               target="_blank" 
               rel="noopener noreferrer"
               class="p-3 glass-effect rounded-lg hover:bg-white hover:bg-opacity-10 transition-all duration-300 transform hover:scale-110 group">
              <svg class="w-6 h-6 text-gray-400 group-hover:text-blue-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
              </svg>
            </a>
          )}
          
          {personalData.social.instagram && (
            <a href={personalData.social.instagram} 
               target="_blank" 
               rel="noopener noreferrer"
               class="p-3 glass-effect rounded-lg hover:bg-white hover:bg-opacity-10 transition-all duration-300 transform hover:scale-110 group">
              <svg class="w-6 h-6 text-gray-400 group-hover:text-pink-400" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 6.62 5.367 11.987 11.988 11.987 6.62 0 11.987-5.367 11.987-11.987C24.014 5.367 18.637.001 12.017.001zM8.449 16.988c-1.297 0-2.354-1.057-2.354-2.354s1.057-2.354 2.354-2.354 2.354 1.057 2.354 2.354-1.057 2.354-2.354 2.354zm7.718 0c-1.297 0-2.354-1.057-2.354-2.354s1.057-2.354 2.354-2.354 2.354 1.057 2.354 2.354-1.057 2.354-2.354 2.354z"/>
              </svg>
            </a>
          )}
        </div>
      </div>
      
      <!-- Quick Navigation -->
      <div class="text-center md:text-right">
        <h3 class="text-xl font-semibold text-white mb-4">Quick Links</h3>
        <div class="flex flex-col space-y-2">
          <a href="#intro" class="text-gray-300 hover:text-purple-400 transition-colors duration-300">Home</a>
          <a href="#about" class="text-gray-300 hover:text-purple-400 transition-colors duration-300">About</a>
          <a href="#projects" class="text-gray-300 hover:text-purple-400 transition-colors duration-300">Projects</a>
          <a href="#experience" class="text-gray-300 hover:text-purple-400 transition-colors duration-300">Experience</a>
          <a href="#education" class="text-gray-300 hover:text-purple-400 transition-colors duration-300">Education</a>
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="text-center md:text-left mb-4 md:mb-0">
          <p class="text-gray-400 text-sm">
            Â© {currentYear} {personalData.name}. All rights reserved.
          </p>
          <p class="text-gray-500 text-xs mt-1">
            Built with Astro, React, and Tailwind CSS
          </p>
        </div>
        
        <div class="flex items-center space-x-4">
          <span class="text-gray-500 text-xs">Made with</span>
          <svg class="w-4 h-4 text-red-500 animate-pulse" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
          </svg>
          <span class="text-gray-500 text-xs">in India</span>
        </div>
      </div>
    </div>
  </div>
</footer>

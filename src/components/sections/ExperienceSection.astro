---
import experienceData from '../../data/experience.json';
---

<section id="experience" class="py-20 relative z-10">
  <div class="max-w-7xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">
        Work <span class="gradient-text">Experience</span>
      </h2>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto">
        My professional journey and career milestones
      </p>
    </div>
    
    <div class="relative">
      <!-- Timeline line -->
      <div class="absolute left-8 md:left-1/2 transform md:-translate-x-1/2 top-0 bottom-0 w-0.5 bg-gradient-to-b from-purple-600 to-blue-600"></div>
      
      <div class="space-y-12">
        {experienceData.experience.map((job, index) => (
          <div class={`relative flex items-center ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
            <!-- Timeline dot -->
            <div class="absolute left-8 md:left-1/2 transform md:-translate-x-1/2 w-4 h-4 bg-gradient-to-r from-purple-600 to-blue-600 rounded-full border-4 border-gray-900 z-10"></div>
            
            <!-- Content -->
            <div class={`glass-effect rounded-xl p-6 ml-16 md:ml-0 ${index % 2 === 0 ? 'md:mr-8' : 'md:ml-8'} md:w-5/12 hover:transform hover:scale-105 transition-all duration-300`}>
              <div class="flex flex-col md:flex-row md:items-center justify-between mb-4">
                <div>
                  <h3 class="text-xl font-semibold text-white mb-1">
                    {job.position}
                  </h3>
                  <p class="text-purple-400 font-medium">{job.company}</p>
                </div>
                <div class="text-right">
                  <p class="text-gray-400 text-sm">{job.duration}</p>
                  <p class="text-gray-500 text-xs">{job.location}</p>
                </div>
              </div>
              
              <div class="mb-4">
                <span class="inline-block px-2 py-1 bg-blue-600/20 text-blue-300 rounded text-xs border border-blue-500/30">
                  {job.type}
                </span>
              </div>
              
              <p class="text-gray-300 mb-4 leading-relaxed">
                {job.description}
              </p>
              
              <!-- Achievements -->
              <div class="mb-4">
                <h4 class="text-sm font-medium text-gray-400 mb-2">Key Achievements:</h4>
                <ul class="space-y-2">
                  {job.achievements.map((achievement) => (
                    <li class="flex items-start space-x-2">
                      <svg class="w-4 h-4 text-purple-400 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-gray-300 text-sm">{achievement}</span>
                    </li>
                  ))}
                </ul>
              </div>
              
              <!-- Technologies -->
              <div>
                <h4 class="text-sm font-medium text-gray-400 mb-2">Technologies Used:</h4>
                <div class="flex flex-wrap gap-2">
                  {job.technologies.map((tech) => (
                    <span class="px-2 py-1 bg-purple-600/20 text-purple-300 rounded text-xs border border-purple-500/30">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
